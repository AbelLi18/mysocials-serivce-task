<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mysocials.service.task.mybatistest.TaskRepository">
    <resultMap id="BaseRM" type="com.mysocials.service.task.mybatistest.TaskPO">
        <id column="ID" property="id"/>
        <result column="NAME" property="name"/>
        <result column="STATUS" property="status"/>
    </resultMap>

    <sql id="BaseColumn">
        ID,NAME,STATUS
    </sql>

    <select id="findTask" parameterType="com.mysocials.service.task.mybatistest.TaskPO" resultMap="BaseRM">
        SELECT
        <include refid="BaseColumn"/>
        FROM TASK WHERE 1=1
        <if test="id != null">
            AND ID = #{id}
        </if>
        <if test="name != null">
            AND NAME = #{name}
        </if>
        <if test="status != null">
            AND STATUS = #{status}
        </if>
    </select>
</mapper>